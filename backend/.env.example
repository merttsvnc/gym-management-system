# PR-4 Production Safety - Environment Template
# Copy to .env and fill in values. Never commit .env with real secrets.

# === Required ===
NODE_ENV=development
PORT=3000
DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/DBNAME?schema=public
JWT_ACCESS_SECRET=your_jwt_access_secret_min_32_chars_required

# === Optional ===
APP_VERSION=1.0.0
CRON_ENABLED=true
FRONTEND_URL=http://localhost:5173
CORS_ORIGINS=http://localhost:5173,https://app.example.com

# === JWT (additional secrets - required for full auth) ===
JWT_REFRESH_SECRET=your_refresh_secret
JWT_SIGNUP_SECRET=your_signup_secret
JWT_RESET_SECRET=your_reset_secret
JWT_ACCESS_EXPIRES_IN=900s
JWT_REFRESH_EXPIRES_IN=30d

# === Auth / Email ===
AUTH_EMAIL_VERIFICATION_ENABLED=false
RESEND_API_KEY=
RESEND_FROM_EMAIL=

# === Storage (R2 or local) ===
# R2_ACCOUNT_ID=
# R2_ACCESS_KEY_ID=
# R2_SECRET_ACCESS_KEY=
# R2_BUCKET_NAME=
# R2_PUBLIC_BASE_URL=
